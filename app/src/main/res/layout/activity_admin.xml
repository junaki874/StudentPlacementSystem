<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CD853F"
   android:orientation="vertical"
    tools:context=".Admin">

    <EditText
        android:id="@+id/userId"
        android:layout_width="519dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="#fff8e7"
        android:drawableLeft="@drawable/person"
        android:hint="Username"
        android:textColorHint="#9122ff"

        android:textSize="20sp" />
    <EditText
        android:id="@+id/passId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Password"
        android:textColorHint="#9122ff"
        android:background="#fff8e7"
        android:drawableLeft="@drawable/lock"
        android:textSize="20sp"
        android:layout_marginTop="5dp"

        />

        <Button
            android:id="@+id/logInId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0c82f1"
            android:text="Log in"
            android:textColor="#f2e4e9"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"

            />
        <Button
            android:id="@+id/forgotId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c9e2de"
            android:text="Forgot your password?"
            android:textColor="#1731c6"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-----------or----------"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="#3b2fc2"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/createId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ef05af4a"
        android:text="Create New Account"
        android:textColor="#eff0f1"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/txtId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#f5ec092b"
        />

</LinearLayout>